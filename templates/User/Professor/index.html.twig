{% extends 'teacherBase.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="container mt-3">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
                </div>
            {% endfor %}
        {% endfor %}
    </div>

    <div class="header-home text-center bg-primary" style="padding: 20px; color: white; margin-top: 20px;">
        <h1>Plateforme d'Apprentissage Moderne</h1>
        <p class="text-center">
            Acc√©dez √† vos cours, regardez des vid√©os, consultez des documents et passez des QCM g√©n√©r√©s par IA
        </p>
    </div>

    <div class="header-home text-center bg-white" style="padding: 20px; color: #000000; margin-top: 20px;">
        <h1>Contenu P√©dagogique :</h1>

        <div class="position-relative mt-4">

            {# ================= SECTION PDF ================= #}
            <div class="text-center mt-4">
                <button type="button" class="btn btn-primary m-2" data-bs-toggle="modal" data-bs-target="#uploadPdfModal">
                    Ajouter un document PDF
                </button>
            </div>

            <div class="modal fade" id="uploadPdfModal" tabindex="-1" aria-labelledby="uploadPdfModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <form action="{{ path('add_pdf') }}" method="post" enctype="multipart/form-data">
                            <div class="modal-header">
                                <h5 class="modal-title" id="uploadPdfModalLabel">Ajouter un document PDF</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                            </div>
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label for="courseIdPdf" class="form-label">Associer au cours</label>
                                    <select class="form-select" name="courseId" id="courseIdPdf" required>
                                        <option value="" disabled selected>Choisir un cours...</option>
                                        {% for course in courses %}
                                            <option value="{{ course.id }}">{{ course.title }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label for="pdfFile" class="form-label">Choisir un fichier PDF</label>
                                    <input class="form-control" type="file" id="pdfFile" name="pdfFile" accept="application/pdf" required>
                                </div>
                                <div class="mb-3">
                                    <label for="pdfTitle" class="form-label">Titre du document</label>
                                    <input type="text" class="form-control" id="pdfTitle" name="pdfTitle" required>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                <button type="submit" class="btn btn-primary">Ajouter</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            {% if pdfs is not empty %}
                <div class="header-home text-center bg-white mt-4" style="padding: 20px;">
                    <h2>Documents PDF :</h2>
                    <div class="d-flex flex-wrap justify-content-center gap-3 mt-3">
                        {% for pdf in pdfs %}
                            <div class="card" style="width: 250px;">
                                <div class="card-body text-center">
                                    <h5 class="card-title">{{ pdf.title }}</h5>
                                    <p class="text-muted small">{{ pdf.course.title ?? 'Aucun cours' }}</p>

                                    {% if pdf.path %}
                                        <a href="{{ asset('uploads/pdf/' ~ pdf.path) }}" class="btn btn-outline-primary mb-2" download> T√©l√©charger </a>
                                        <a href="{{ asset('uploads/pdf/' ~ pdf.path) }}" class="btn btn-outline-success mb-2" target="_blank"> Lire </a>

                                        <button type="button" class="btn btn-warning w-100 btn-sm" data-bs-toggle="modal" data-bs-target="#modalGenPdf{{ pdf.id }}">
                                            Configurer & G√©n√©rer QCM
                                        </button>

                                        <div class="modal fade" id="modalGenPdf{{ pdf.id }}" tabindex="-1" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <form action="{{ path('app_quiz_generate', {id: pdf.id}) }}" method="post">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">G√©n√©rer un QCM : {{ pdf.title }}</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <div class="modal-body text-start">
                                                            <div class="mb-3">
                                                                <label class="form-label">Nombre de questions</label>
                                                                <input type="number" name="nbQuestions" class="form-control" value="10" min="1" max="20" required>
                                                            </div>
                                                            <div class="mb-3">
                                                                <label class="form-label">Type de QCM</label>
                                                                <select name="type" class="form-select">
                                                                    <option value="mcq">QCM Classique (4 choix)</option>
                                                                    <option value="true_false">Vrai ou Faux</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                            <button type="submit" class="btn btn-warning" onclick="return confirm('Lancement de l\'IA...')">G√©n√©rer !</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    {% else %}
                                        <p class="text-danger">Fichier introuvable</p>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            {# ================= SECTION VIDEO ================= #}
            <div class="header-home text-center bg-white mt-4" style="padding: 20px;">
                <h2>Video :</h2>
                <button type="button" class="btn btn-primary m-2" data-bs-toggle="modal" data-bs-target="#uploadVideoModal">
                    Ajouter une vid√©o
                </button>

                {% if videos is not empty %}
                    <div class="d-flex flex-wrap justify-content-center gap-3 mt-3">
                        {% for video in videos %}
                            <div class="card" style="width: 300px;">
                                <div class="card-body text-center">
                                    <h5 class="card-title">{{ video.title }}</h5>
                                    <p class="text-muted small">{{ video.course.title ?? 'Aucun cours' }}</p>
                                    <video width="100%" height="200" controls>
                                        <source src="{{ asset('uploads/video/' ~ video.path) }}" type="video/mp4">
                                    </video>
                                    <button type="button" class="btn btn-warning w-100 btn-sm mt-2" data-bs-toggle="modal" data-bs-target="#modalGenVideo{{ video.id }}">
                                        ‚öôÔ∏è Configurer & G√©n√©rer QCM Vid√©o
                                    </button>

                                    <div class="modal fade" id="modalGenVideo{{ video.id }}" tabindex="-1" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <form action="{{ path('app_quiz_generate_video', {id: video.id}) }}" method="post">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">G√©n√©rer QCM Vid√©o : {{ video.title }}</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body text-start">
                                                        <div class="mb-3">
                                                            <label class="form-label">Nombre de questions</label>
                                                            <input type="number" name="nbQuestions" class="form-control" value="10" min="1" max="20" required>
                                                        </div>
                                                        <div class="mb-3">
                                                            <label class="form-label">Type de QCM</label>
                                                            <select name="type" class="form-select">
                                                                <option value="mcq">QCM Classique (4 choix)</option>
                                                                <option value="true_false">Vrai ou Faux</option>
                                                            </select>
                                                        </div>
                                                        <div class="alert alert-info small">
                                                            L'analyse vid√©o prend du temps (transcription + g√©n√©ration).
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                        <button type="submit" class="btn btn-warning">G√©n√©rer !</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}

                <div class="modal fade" id="uploadVideoModal" tabindex="-1" aria-labelledby="uploadVideoModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <form action="{{ path('add_video') }}" method="post" enctype="multipart/form-data">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="uploadVideoModalLabel">Ajouter une video</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="mb-3">
                                        <label for="courseIdVideo" class="form-label">Associer au cours</label>
                                        <select class="form-select" name="courseId" id="courseIdVideo" required>
                                            <option value="" disabled selected>Choisir un cours...</option>
                                            {% for course in courses %}
                                                <option value="{{ course.id }}">{{ course.title }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                    <div class="mb-3">
                                        <label for="videoFile" class="form-label">Choisir une video</label>
                                        <input class="form-control" type="file" id="videoFile" name="videoFile" accept="video/*" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="videoTitle" class="form-label">Titre de la video</label>
                                        <input type="text" class="form-control" id="videoTitle" name="videoTitle" required>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                    <button type="submit" class="btn btn-primary">Ajouter</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            {# ================= SECTION QCM G√âN√âR√âS ================= #}
            <div class="header-home text-center bg-white mt-4" style="padding: 20px;">
                <h2>Mes QCMs G√©n√©r√©s :</h2>
                {% if quizzes is not empty %}
                    <div class="d-flex flex-wrap justify-content-center gap-3 mt-3">
                        {% for quiz in quizzes %}
                            <div class="card border-warning mb-3" style="width: 300px;">
                                <div class="card-header bg-warning text-dark">
                                    <h5 class="card-title mb-0">{{ quiz.nom ?? quiz.title }}</h5>
                                </div>
                                <div class="card-body">
                                    <p class="small text-muted">{{ quiz.course.title ?? 'Cours inconnu' }}</p>
                                    <p class="card-text">
                                        <strong>{{ quiz.questions|length }}</strong> questions<br>
                                        Type :
                                        {% if quiz.questions|first and quiz.questions|first.type == 'true_false' %}
                                            <span class="badge bg-info">Vrai / Faux</span>
                                        {% else %}
                                            <span class="badge bg-primary">QCM</span>
                                        {% endif %}
                                    </p>
                                    <a href="{{ path('app_teacher_quiz_preview', {id: quiz.id}) }}" class="btn btn-outline-dark w-100">
                                        Tester le Quiz
                                    </a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-center mt-4">Aucun QCM g√©n√©r√© pour l'instant.</p>
                {% endif %}
            </div>

        </div>
    </div>

    {# ================= SECTION R√âSULTATS G√âN√âRAUX ================= #}
    <div class="header-home bg-white mt-4 shadow-sm rounded text-dark" style="padding: 20px; border: 1px solid #eee;">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="mb-0">üìä R√©sultats des QCM</h1>
            <button class="btn btn-success btn-sm">üì• Exporter en CSV</button>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-primary text-white">
                <tr style="background-color: #0d6efd;">
                    <th>√âtudiant</th>
                    <th>Quiz</th>
                    <th class="text-center">Date</th>
                    <th class="text-center">Score</th>
                    <th class="text-center">Note</th>
                    <th class="text-center">Actions</th>
                </tr>
                </thead>
                <tbody class="text-dark">
                <tbody class="text-dark">
                {% for result in results %}
                    <tr>
                        <td class="fw-bold">
                            {% if result.student %}
                                {{ result.student.name }} {{ result.student.lastName|upper }}
                            {% else %}
                                <span class="text-muted italic">√âtudiant inconnu</span>
                            {% endif %}
                        </td>
                        <td>{{ result.qcm.nom ?? result.qcm.title ?? 'Quiz inconnu' }}</td>
                        <td class="text-center text-muted small">
                            {{ result.submittedAt|date('d/m/Y') }}
                        </td>
                        <td class="text-center fw-bold">
                            {% set totalQuestions = result.qcm.questions|length %}
                            {% set displayScore = totalQuestions > 0 ? (result.score * totalQuestions / 20)|round(0, 'floor') : result.score %}

                            <span class="{{ displayScore > 0 ? 'text-dark' : 'text-danger' }}">
                {{ displayScore }}/{{ totalQuestions > 0 ? totalQuestions : '?' }}
            </span>
                        </td>
                        <td class="text-center">
                            {% set scoreEnBase = result.score %}
                            {% if scoreEnBase >= 16 %}
                                <span class="badge bg-success text-white px-3 py-2 rounded-pill">Excellent</span>
                            {% elseif scoreEnBase >= 12 %}
                                <span class="badge bg-primary text-white px-3 py-2 rounded-pill">Bien</span>
                            {% elseif scoreEnBase >= 10 %}
                                <span class="badge bg-warning text-dark px-3 py-2 rounded-pill">Moyen</span>
                            {% else %}
                                <span class="badge bg-danger text-white px-3 py-2 rounded-pill">√Ä am√©liorer</span>
                            {% endif %}
                        </td>
                        <td class="text-center">
                            {# Le bouton appelle maintenant la Modal sp√©cifique √† ce r√©sultat #}
                            <button type="button" class="btn btn-outline-primary btn-sm rounded" data-bs-toggle="modal" data-bs-target="#modalDetails{{ result.id }}">
                                Voir d√©tails
                            </button>

                            {# ================= MODAL D√âTAILS (MAQUETTE EDULEARN) ================= #}
                            <div class="modal fade" id="modalDetails{{ result.id }}" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content">
                                        <div class="modal-header bg-light">
                                            <h5 class="modal-title">D√©tails du r√©sultat - {{ result.qcm.nom ?? 'Quiz' }}</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body text-start">
                                            {# Zone Stats (Identique maquette) #}
                                            <div class="row g-3 mb-4">
                                                <div class="col-md-4">
                                                    <div class="p-3 border rounded bg-light text-center">
                                                        <small class="text-uppercase text-muted fw-bold" style="font-size: 0.7rem;">Nombre de questions</small>
                                                        <div class="h4 mb-0 fw-bold">{{ totalQuestions }}</div>
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="p-3 border rounded bg-light text-center border-start border-4 border-start-success">
                                                        <small class="text-uppercase text-success fw-bold" style="font-size: 0.7rem;">Bonnes r√©ponses</small>
                                                        <div class="h4 mb-0 fw-bold text-success">{{ displayScore }}</div>
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="p-3 border rounded bg-light text-center border-start border-4 border-start-danger">
                                                        <small class="text-uppercase text-danger fw-bold" style="font-size: 0.7rem;">Mauvaises r√©ponses</small>
                                                        <div class="h4 mb-0 fw-bold text-danger">{{ totalQuestions - displayScore }}</div>
                                                    </div>
                                                </div>
                                            </div>

                                            {# Zone D√©tail questions #}
                                            <div class="p-3 border rounded">
                                                <h6 class="fw-bold mb-3 border-bottom pb-2">üìã D√©tail des questions</h6>
                                                <div class="list-group list-group-flush">
                                                    {% for question in result.qcm.questions %}
                                                        <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                                            <div class="text-truncate" style="max-width: 80%;">
                                                                <span class="text-muted me-2 small">Q{{ loop.index }}:</span>{{ question.text }}
                                                            </div>
                                                            {# Simulation visuelle comme sur React #}
                                                            {% if loop.index <= displayScore %}
                                                                <span class="text-success fw-bold small">‚úÖ Correcte</span>
                                                            {% else %}
                                                                <span class="text-danger fw-bold small">‚ùå Incorrecte</span>
                                                            {% endif %}
                                                        </div>
                                                    {% endfor %}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center py-4 text-muted italic">
                            Aucune tentative n'a √©t√© enregistr√©e pour le moment.
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

{% endblock %}